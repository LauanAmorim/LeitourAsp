
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN" crossorigin="anonymous">
    <link rel="stylesheet" href="~/Content/Login/Login.css" />
    <meta name="viewport" content="width=device-width" />
    <title>Login</title>
</head>
<body class="justify-content-center align-items-center flex-wrap">
    <div class="container position-relative d-inline-flex border-5">

        <div class="">
            <form>
                <div class="">
                    <img src="~/Images/logoleitour.svg" class="modal-dialog-centered" />
                    <h1 class="h2">LEITOUR</h1>
                </div>
                <button class="btn-secondary">Nova Conta</button>
            </form>
        </div>

        <div class="form-container">
            <form>
                <h1 class="h3">Login</h1>
                <h1 class="h5">Seja bem vindo a Leitour!</h1>
                <div class="form-floating mb-3 input-group">
                    <span class="input-group-addon"><i class="fa fa-user"></i></span>
                    <input type="email" class="form-control" id="floatingInput" placeholder="seu-email@gmail.com">
                    <label for="floatingInput">Endereço de e-mail</label>
                </div>
                <div class="form-floating input-group">
                    <span class="input-group-addon"><i class="fa fa-lock"></i></span>
                    <input type="password" class="form-control" id="floatingInput" placeholder="">
                    <label for="floatingInput">Senha</label>
                </div>
                <div class="row">
                <div class="form-check input-group">
                    <input type="checkbox" class="form-check-input" id="flexCheckDefault">
                    <label class="form-check-label" for="flexCheckDefault">Lembrar-se</label>
                    <div class="">
                        <button type="button" class="btn">Forgot password?</button>
                    </div>
                </div>
                </div>
                <div class="row">

                    <div class="">
                        <button type="button" class="btn btn-primary">Login</button>
                    </div>
                    <p class="text-body-secondary ">&copy;DevPolarys 2023. All Reserved</p>
                </div>
            </form>
        </div>
    </div>

</body>
</html>
